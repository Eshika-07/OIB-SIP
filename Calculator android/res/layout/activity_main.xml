<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffdde1"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textColor="#ee9ca7"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#C9FFBF"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        
        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="AC"
            android:layout_margin="5dp"
            android:textColor="#FFEB3B"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#FFAFBD"/>
        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="^"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#FFAFBD"/>
        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="BACK"
            android:layout_margin="5dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#FFAFBD"/>
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="/"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:backgroundTint="#FFAFBD"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/n7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="7"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/n8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="8"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/n9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="9"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/mux"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="*"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold"
            android:backgroundTint="#FFAFBD"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/n4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/n5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/n6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="-"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#FFAFBD"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/n1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/n2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="2"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/n3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="3"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="+"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#FFAFBD"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/n0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="0"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="."
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="ANS"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#7BD8E4"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="="
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:backgroundTint="#FFAFBD"/>

    </LinearLayout>

</LinearLayout>